<p id=”alert”><%= alert %></p>
<h3>Log In<h3>

<%= form_tag sessions_path do |form| %>
  <div class='field'>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </div>
  <div class='field'>
    <%= label_tag :password %>
    <%= text_field_tag :password %>
  </div>
  <div class='actions'>
    <%= submit_tag 'Log In' %>
  </div>
<% end %>
